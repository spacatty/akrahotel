<Window x:Class="AkraHotel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AkraHotel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="200" Width="800" Closing="Window_Closing">
    <Grid>
        <StackPanel Margin="0,16,0,0">
            <TextBox Padding="8" TextAlignment="Center" Margin="4" Text="Логин" x:Name="loginInput"/>
            <TextBox Padding="8" TextAlignment="Center" Margin="4" Text="Пароль" x:Name="passwordInput"/>
            <Button Width="200" Padding="8" Margin="4" Content="Войти" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
